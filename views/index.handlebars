<h1 class="text-center" id ="title">Eat A Burger</h1>


<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-5 all-burgers">
      <h2> BURGERS ON PLATE !</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-5 all-burgers ">
      <h2> ALL DEVOURED BURGERS ! </h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>


  </div>

  <div class="row d-inline-flex align-items-center">

    <h2 class="col-12" id= "add-burger"> ADD A BURGER </h2>

    <form class="create-form text-center col-6" id ="new-burger-form">

      <div class="form-group">
        <label for="ca">Burger Name :</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="slee">Already devoured it?</label><br>
        <input type="radio" name="devoured" value="1" checked> Yup <br>
        <input type="radio" name="devoured" value="0"> Nope
      </div>

      <button type="submit" class= "add-burger">Add burger</button>
    </form>

  </div>



</div>
